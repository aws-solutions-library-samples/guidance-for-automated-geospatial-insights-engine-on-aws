{
	"name": "@arcade/cli",
	"version": "0.0.1",
	"description": "ARCADE CLI helper application.",
	"author": "Dean Hart <deanhart@amazon.com>",
	"type": "module",
	"bin": {
		"arcade": "./bin/run.js"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"/bin/run.js",
		"/dist",
		"/oclif.manifest.json"
	],
	"scripts": {
		"lint": "npx eslint . --ext .ts",
		"clean": "shx rm -rf dist",
		"build": "npm run clean && tsc -b && shx cp .env dist/.env",
		"test": "mocha --forbid-only \"test/**/*.test.ts\"",
		"posttest": "npm run lint",
		"prepack": "npm run build && oclif manifest && oclif readme",
		"prepackage:macos": "rush purge && npm shrinkwrap && npm install --force",
		"package:macos": "npx oclif pack macos",
		"package:win": "npx oclif pack win",
		"package:debian": "npx oclif pack deb",
		"package:tarballs": "npx oclif pack tarballs",
		"postpack": "shx rm -f oclif.manifest.json",
		"version": "oclif readme && git add README.md"
	},
	"oclif": {
		"bin": "arcade",
		"dirname": "arcade",
		"helpClass": "./dist/utils/help",
		"commands": "./dist/commands",
		"macos": {
			"identifier": "com.arcade.cli"
		},
		"plugins": [
			"@oclif/plugin-help",
			"@oclif/plugin-plugins"
		],
		"topicSeparator": " ",
		"topics": {
			"stacServer": {
				"description": "Contains list of sub-commands to setup the Stac Server"
			},
			"arcade": {
				"description": "Contains list of sub-commands to setup the Arcade"
			}
		},
		"hooks": {
			"init": [
				{
					"target": "./dist/index.js",
					"identifier": "INIT_HOOK"
				},
				{
					"target": "./dist/index.js",
					"identifier": "ESM1_INIT_HOOK"
				}
			],
			"update": {
				"target": "./dist/index.js",
				"identifier": "UPDATE_HOOK"
			}
		}
	},
	"dependencies": {
		"@arcade/helpers": "workspace:*",
		"@arcade/lambda-invoker": "workspace:*",
		"@arcade/events": "workspace:*",
		"@aws-sdk/client-cloudformation": "~3",
		"@aws-sdk/client-eventbridge": "~3",
		"@aws-sdk/client-lambda": "~3",
		"@aws-sdk/client-ssm": "~3",
		"@aws-sdk/client-sts": "~3",
		"@aws-sdk/client-secrets-manager": "~3",
		"@aws-sdk/credential-provider-node": "3.554.0",
		"@aws-sdk/util-utf8-node": "~3",
		"@inquirer/prompts": "5.0.1",
		"@inquirer/select": "2.3.1",
		"@microsoft/rush-lib": "5.120.3",
		"@microsoft/rush": "5.120.3",
		"@oclif/core": "3.26.4",
		"@oclif/plugin-help": "6.0.21",
		"@oclif/plugin-plugins": "5.0.9",
		"axios": "1.6.8",
		"compare-versions": "6.1.0",
		"conf": "12.0.0",
		"dayjs": "~1",
		"dotenv": "~16",
		"enquirer": "2.4.1",
		"eslint": "~9",
		"listr2": "8.2.1",
		"octokit": "3.2.0",
		"ow": "~1",
		"promisify": "0.0.3",
		"shelljs": "~0",
		"table": "6.8.2",
		"ulid": "~2",
		"simple-git": "^3.19.1",
		"replace-in-file": "7.1.0"
	},
	"devDependencies": {
		"@oclif/test": "3.2.10",
		"@rushstack/eslint-config": "3.6.9",
		"@tsconfig/node20": "~20",
		"@types/chai": "4",
		"@types/listr": "0.14.9",
		"@types/mocha": "10.0.6",
		"@types/node": "20.12.7",
		"@types/shelljs": "0.8.15",
		"chai": "5.1.0",
		"esbuild": "0.20.2",
		"eslint-config-oclif": "5.1.2",
		"eslint-config-oclif-typescript": "3.1.5",
		"eslint-plugin-prettier": "5.1.3",
		"eslint-plugin-unicorn": "52.0.0",
		"mocha": "10.4.0",
		"oclif": "4.8.5",
		"prettier": "3.2.5",
		"shx": "~0",
		"tslib": "2.6.2",
		"typescript": "~5",
		"ts-node": "~10"
	},
	"private": false
}
